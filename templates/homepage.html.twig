{% extends 'base.html.twig' %}

        {% block content %}
<section class="jumbotron text-center">
    <div class="container">

        <p>
            <a href="#" class="btn btn-primary my-2">Main call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
<div class="container">
    <div class="row">
        {% for sword in swords %}
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm" style="height: 450px;">
                <img class="card-img-top" data-src="{{ sword.picture }}" src="{{ sword.picture }}" alt="Card image cap" style="height: 200px">
                <div class="card-body">
                    <h3>{{ sword.name|upper }}</h3>
                    <p class="card-text"></p>
                    <div class="d-flex justify-content-between align-items-center" style="position: absolute; bottom: 10px; width: 100%">
                        <div class="btn-group">
                            <a href="{{ path('product_detail', {
                        'productId': sword.id
                    }) }}" class="btn btn-sm btn-success">Plus d'infos</a>
                            <button type="button" class="btn btn-sm btn-dark"></button>
                        </div>
                        <span class="badge badge-danger" style="position: relative; right: 30px;">{{ sword.price|number_format }} $</span>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endblock %}